# Core infrastructure
POSTGRES_DB=meeting_assistant
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/meeting_assistant

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# API keys (set real values in your local .env, never commit secrets)
OPENAI_API_KEY=
HUGGING_FACE_TOKEN=
REQUIRE_OPENAI=false
CORS_ALLOW_ORIGINS=http://localhost:3000

# Auth middleware (enable and set per-service key)
AUTH_ENABLED=0
SERVICE_API_KEY=change-me-in-local-only

# Idempotency
IDEMPOTENCY_TTL_SECONDS=600

# Integrations provider resilience (timeouts/circuit/retries)
CB_WINDOW_SECONDS=60
CB_MAX_FAILURES=5
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_SECONDS=0.5
PROVIDER_TIMEOUT_DEFAULT_SECONDS=5
PROVIDER_TOTAL_BUDGET_SECONDS=10
# Optional per-provider timeouts, e.g. Slack/Gmail/Notion/Calendar
# TIMEOUT_SLACK_SECONDS=5
# TIMEOUT_GMAIL_SECONDS=8

# Integrations
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
SLACK_BOT_TOKEN=
NOTION_API_KEY=

# UI
NEXT_PUBLIC_API_URL=http://localhost:8001
NODE_ENV=development

# Misc
PYTHONUNBUFFERED=1
PIP_DISABLE_PIP_VERSION_CHECK=1
